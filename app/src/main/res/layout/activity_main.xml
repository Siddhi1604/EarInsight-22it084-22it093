<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin_altered"
    android:paddingEnd="0dp"
    android:paddingTop="16dp"
    android:gravity="center_vertical"
    android:background="@color/background_white"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EarInsight"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginHorizontal="100sp"
        android:layout_marginTop="-100sp"
        android:layout_marginBottom="100sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="Hearing Evaluation"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="end"
        android:layout_marginTop="-100sp"
        android:layout_marginBottom="100sp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp">
        <Button
            android:id="@+id/main_startTest"
            android:visibility="gone"
            android:layout_width="330sp"
            android:layout_height="wrap_content"
            android:text="@string/button_start"
            android:paddingStart="30sp"
            android:paddingEnd="10sp"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:layout_marginBottom="15sp"
            android:onClick="gotoTest"
            android:background="@drawable/button_background"
            android:layout_gravity="start"
            android:gravity="end"
            android:elevation="5dp"/>

        <Button
            android:id="@+id/main_startSingleTest"
            android:visibility="gone"
            android:layout_width="290sp"
            android:layout_height="wrap_content"
            android:text="@string/button_singlestart"
            android:paddingStart="30sp"
            android:paddingEnd="10sp"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:layout_marginBottom="15sp"
            android:onClick="gotoSingleTest"
            android:background="@drawable/button_background"
            android:layout_gravity="start"
            android:gravity="end"
            android:elevation="5dp"/>

        <Button
            android:id="@+id/main_results"
            android:visibility="gone"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_test_lookup"
            android:paddingStart="30sp"
            android:paddingEnd="10sp"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:layout_marginBottom="15sp"
            android:onClick="gotoExport"
            android:background="@drawable/button_background"
            android:layout_gravity="start"
            android:gravity="end"
            android:elevation="5dp"/>

        <Button
            android:layout_width="210sp"
            android:layout_height="wrap_content"
            android:text="@string/title_calibration"
            android:onClick="gotoPreCalibration"
            android:background="@drawable/button_background"
            android:paddingStart="30sp"
            android:paddingEnd="10sp"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:layout_marginBottom="15sp"
            android:layout_gravity="start"
            android:gravity="end"
            android:elevation="5dp"/>

         <Button
            android:layout_width="170sp"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_info"
            android:paddingStart="20sp"
            android:paddingEnd="10sp"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:onClick="gotoInfo"
            android:background="@drawable/button_background"
            android:gravity="end"
            android:elevation="5dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>